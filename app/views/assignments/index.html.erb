<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <% content_for(:title_tag) do %>
        All assignments for <%= @school_class.name %> on eduAssist.me
      <% end %>

      <div class="card-wrapper list-wrapper wrapper-with-sticky-footer">
        <h1><%= @school_class.name %> Assignments</h1>
        <ul class="list-group">
          <% @assignments.each do |assignment| %>
            <%= link_to assignment do %>
              <li class= "list-group-item">
                <div class="item-name">
                  <%= assignment.name %>
                </div>
                <div class="item-attribute" id="assignment-category">
                  <%= assignment.category %>
                </div>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
      <div class="sticky-footer">
        <%= link_to new_school_class_assignment_path(@school_class), class: "btn edu-button" do  %>
        New Assignment?
        <div class="text-underline-green"></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
