<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <% content_for(:title_tag) do %>
        Take attendance for <%= Date.today.strftime("%A, %-d %B %Y") %> on eduAssist.me
      <% end %>

      <div class="card-wrapper list-wrapper wrapper-with-sticky-footer">
        <div class="headline">
          <h3><%= Date.today.strftime("%A, %-d %B %Y") %></h3>
        </div>
        <div class="list-group">
          <% path = attendances_path %>
          <% form_options = { id: 'attendance' }%>

          <%= render 'form', path: path, form_options: form_options %>
        </div>
      </div>
    </div>
  </div>
</div>
