<% t = Time.now %>

<h2><%= t.strftime("%A, %d %B %Y") %></h2>

<%= form_tag school_class_attendances_path, id: 'attendance' do %>
  <table class="table table-striped">
    <thead>
      <tr>
        <td>Student</td>
        <td>Presence</td>
      </tr>
    </thead>
    <tbody>
      <% @attendances.each do |attendance| %>
        <%= fields_for 'attendances[]', attendance do |f| %>
          <tr id="<%= attendance.student.id %>">
            <td><%= f.label :present, attendance.student.first_name %></td>
            <td>
              <ul class="list-inline">
                <li>
                <div class="btn edu-button present" id="<%= attendance.student.id %>">Present<div class="text-underline-green stretchRight"></div></div></li>
                <li><div class="btn edu-button absent" id="<%= attendance.student.id %>">Absent<div class="text-underline-red stretchLeft"></div></div></li>
              </ul>
            </td>
            <%= f.text_field :present, type: 'hidden'%>
            <%= f.text_field :student_id, type: 'hidden'%>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <input class='btn edu-button' type="submit" value="Submit" form="attendance">
<% end %>


<script>
  $(document).ready(function(){
    $('.present').on('click', function(){
      var id = $(this).attr('id');
      $('tr#' + id + ' input').first().val('true');
      $('tr#' + id + ' td').last().html('<i class="fa fa-check" aria-hidden="true"></i>');
    });
    $('.absent').on('click', function(){
      var id = $(this).attr('id');
      $('tr#' + id + ' input').first().val('false');
      $('tr#' + id + ' td').last().html('<i class="fa fa-times" aria-hidden="true"></i>');
    });
  });
</script>
