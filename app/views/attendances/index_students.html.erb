<div class="card-wrapper list-wrapper">
  <h1><%= @student.first_name %>'s attendance record</h1>
  <div id="calendar">
  </div>
</div>

<script>


  $(document).ready(function() {
    $('#calendar').fullCalendar({
      firstDay: 1,
      aspectRatio: 1,
      theme: false,
      events:
        [ <% @events.each do  |event| %>
         { start: "<%= event[:start] %>",
          title: "<%= event[:title] %>",
          rendering: "<%= event[:rendering] %>",
          backgroundColor: "<%= event[:backgroundColor] %>"
         },
         <% end %> ]
        });
    });
</script>
