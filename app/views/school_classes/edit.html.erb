<% content_for(:title_tag) do %>
  Edit <%= @school_class.name %> details on eduAssist.me
<% end %>

<div class="card-wrapper form-wrapper">
  <%= render 'form' %>
    <li>
      <button type="button" class="btn edu-button-danger" data-toggle="modal" data-target="#deleteModal">
        Delete Class
      </button>
    </li>
  </ul>

  <!-- Modal -->
  <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header delete-modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Important Notice!</h4>
        </div>
        <div class="modal-body">
          You are about to delete this school class permanently.<br>
          This means all associated data of students will be deleted as well.<br>
          Only select 'Delete' if you really want to do this.
        </div>
        <div class="modal-footer">
          <%= button_to "Delete Class", { action: "destroy", id: @school_class.id }, method: :delete, class: 'btn edu-button-danger' %>
        </div>
      </div>
    </div>
  </div>
</div>
